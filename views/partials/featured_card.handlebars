<div class="card sticky-action hoverable">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{img}}">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">More...</i></span>
      <div class="card-action">
        {{!-- <a class="waves-effect waves-light btn-small addBtn" data-id="{{id}}">Add to Cart</a> --}}
        <a class="addBtn" data-id="{{id}}">Add to Cart</a>
      </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{title}}<i class="material-icons right">close</i></span>
      <p>{{description}}</p>
    </div>
  </div>
